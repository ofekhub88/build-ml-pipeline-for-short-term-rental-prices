name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: input artifact name  after EDA 
        type: string

      output_artifact:
        description: output artifact name   
        type: string

      output_type:
        description:  output artifact 
        type: string

      output_description:
        description: aoutput  artifact  description for w&b parametrs 
        type: string

      min_price:
        description: minumum price for outliers data
        type: float

      max_price:
        description: Maximum price for outliers data
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
